{{> layout}}

{{#content}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{#contact.contactPersonKey}}Edit{{/contact.contactPersonKey}}{{^contact.contactPersonKey}}New{{/contact.contactPersonKey}} Contact</h1>
    <a href="/contacts" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Contacts
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form action="/contacts/save" method="post">
            {{#contact.contactPersonKey}}
            <input type="hidden" name="contactPersonKey" value="{{contact.contactPersonKey}}">
            {{/contact.contactPersonKey}}

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="firstName" class="form-label">First Name*</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" value="{{contact.firstName}}" required>
                </div>
                <div class="col-md-6">
                    <label for="lastName" class="form-label">Last Name*</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" value="{{contact.lastName}}" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="{{contact.title}}">
            </div>

            <div class="mb-3">
                <label for="emailAddress" class="form-label">Email Address*</label>
                <input type="email" class="form-control" id="emailAddress" name="emailAddress" value="{{contact.emailAddress}}" required>
            </div>

            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="{{contact.phoneNumber}}">
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Save Contact</button>
            </div>
        </form>
    </div>
</div>
{{/content}}