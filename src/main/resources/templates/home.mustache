{{> layout}}

{{#content}}
<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4">Order Management Dashboard</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <h5 class="card-title">Items</h5>
                <h2 class="display-4">{{itemCount}}</h2>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white stretched-link" href="/items">View Details</a>
                <i class="bi bi-box-seam"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <h5 class="card-title">Contacts</h5>
                <h2 class="display-4">{{contactCount}}</h2>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white stretched-link" href="/contacts">View Details</a>
                <i class="bi bi-person"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <h5 class="card-title">Companies</h5>
                <h2 class="display-4">{{companyCount}}</h2>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white stretched-link" href="/companies">View Details</a>
                <i class="bi bi-building"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <h5 class="card-title">Parts</h5>
                <h2 class="display-4">{{partCount}}</h2>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="text-white stretched-link" href="/parts">View Details</a>
                <i class="bi bi-gear"></i>
            </div>
        </div>
    </div>
</div>
{{/content}}