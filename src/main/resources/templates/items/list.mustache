{{> layout}}

{{#content}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Items</h1>
    <a href="/items/new" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add New Item
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Award Name</th>
                        <th>Company</th>
                        <th>Contact</th>
                        <th>Order Date</th>
                        <th>Retail Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#items}}
                    <tr>
                        <td>{{itemID}}</td>
                        <td>{{awardName}}</td>
                        <td>{{company.companyName}}</td>
                        <td>{{contactPerson.firstName}} {{contactPerson.lastName}}</td>
                        <td>{{dateOfOrder}}</td>
                        <td>${{retailPrice}}</td>
                        <td>
                            <a href="/items/edit/{{itemID}}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/items/{{itemID}}/parts" class="btn btn-sm btn-info">
                                <i class="bi bi-gear"></i>
                            </a>
                            <a href="/items/delete/{{itemID}}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this item?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/items}}
                    {{^items}}
                    <tr>
                        <td colspan="7" class="text-center">No items found</td>
                    </tr>
                    {{/items}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/content}}