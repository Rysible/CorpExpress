{{> layout}}

{{#content}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Companies</h1>
    <a href="/companies/new" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add New Company
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Company Name</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#companies}}
                    <tr>
                        <td>{{companyKey}}</td>
                        <td>{{companyName}}</td>
                        <td>{{companyAddress}}</td>
                        <td>
                            <a href="/companies/edit/{{companyKey}}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/companies/delete/{{companyKey}}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this company?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/companies}}
                    {{^companies}}
                    <tr>
                        <td colspan="4" class="text-center">No companies found</td>
                    </tr>
                    {{/companies}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/content}}