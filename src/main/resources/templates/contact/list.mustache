{{> layout}}

{{#content}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Contact Persons</h1>
    <a href="/contacts/new" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add New Contact
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#contacts}}
                    <tr>
                        <td>{{contactPersonKey}}</td>
                        <td>{{firstName}} {{lastName}}</td>
                        <td>{{title}}</td>
                        <td>{{emailAddress}}</td>
                        <td>{{phoneNumber}}</td>
                        <td>
                            <a href="/contacts/edit/{{contactPersonKey}}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/contacts/delete/{{contactPersonKey}}" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this contact?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/contacts}}
                    {{^contacts}}
                    <tr>
                        <td colspan="6" class="text-center">No contacts found</td>
                    </tr>
                    {{/contacts}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/content}}